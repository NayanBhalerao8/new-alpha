<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(model: article, class: "shadow-lg p-3 mb-3 bg-info rounded", local: "true") do |form| %>
          
         <%= render 'shared/errors' %>

          <div class="form-group row mt-3">
            <%= form.label :title,class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= form.text_field :title , class: "form-control shadow rounded", placeholder: "Title of article"%>
            </div>
          </div>

          <div class="form-group row mt-3">
            <%= form.label :description,class: "col-2 col-form-label text-light "  %>
            <div class="col-10">
            <%= form.text_area :description ,rows: 10, class: "form-control shadow rounded", placeholder: "Description"%>
            </div>
          </div>

        <div class="form-group row justify-content-center">
              <%= form.submit class:"btn btn-outline-light btn-lg mt-3",style: "width: 194px;"%>
            </div>
        <% end %>
      </div>
      <center>
     <%= link_to '[Cancle or Return to article listing]', articles_path, class: "text-info" %>
     </center>
  </div>

 </div>