<div id="page-content">

 <div class="alert alert-success alert-dismissable fade show" role="alert">  <%= notice %>
 <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<h1 class="text-center mt-4">Login</h1>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(scope: :session,url: login_path, class: "shadow-lg p-3 mb-3 bg-info rounded", local: "true") do |form| %>
          
          <div class="form-group row mt-3">
            <%= form.label :email,class: "col-2 col-form-label text-light "  %>
            <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
            </div>
          </div>

           <div class="form-group row mt-3">
            <%= form.label :password,class: "col-2 col-form-label text-light "  %>
            <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "enter your password"%>
            </div>
          </div>

        <div class="form-group row justify-content-center">
              <%= form.submit "Login", class:"btn btn-outline-light btn-lg mt-3",style: "width: 194px;"%>
            </div>
        <% end %>
      </div>
      <center>
     <%= link_to '[Cancle or Return to article listing]', articles_path, class: "text-info" %>
     </center>
  </div>

 </div>

 </div>