<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(model: @category, class: "shadow-lg p-3 mb-3 bg-info rounded", local: "true") do |form| %>
          
         <%= render 'shared/errors', obj:@category %>

          <div class="form-group row mt-3">
            <%= form.label :name, "Category Name",class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "enter a name"%>
            </div>
          </div>

        
        <div class="form-group row justify-content-center">
              <%= form.submit class:"btn btn-outline-light btn-lg mt-3",style: "width: 194px;"%>
            </div>
        <% end %>
      </div>
      <center>
     <%= link_to '[Cancle or Return to article listing]', articles_path, class: "text-info" %>
     </center>
  </div>

 </div>