<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(model: @user, class: "shadow-lg p-3 mb-3 bg-info rounded", local: "true") do |form| %>
          
         <%= render 'shared/errors', obj:@user %>

          <div class="form-group row mt-3">
            <%= form.label :username,class: "col-2 col-form-label text-light" %>
            <div class="col-10">
            <%= form.text_field :username , class: "form-control shadow rounded", placeholder: "enter a username"%>
            </div>
          </div>

          <div class="form-group row mt-3">
            <%= form.label :email,class: "col-2 col-form-label text-light "  %>
            <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
            </div>
          </div>

           <div class="form-group row mt-3">
            <%= form.label :password,class: "col-2 col-form-label text-light "  %>
            <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "choose a password"%>
            </div>
          </div>

        <div class="form-group row justify-content-center">
              <%= form.submit(@user.new_record? ? "Sign Up" : "Update account", class:"btn btn-outline-light btn-lg mt-3",style: "width: 194px;")%>
            </div>
        <% end %>
      </div>
      <center>
     <%= link_to '[Cancle or Return to article listing]', articles_path, class: "text-info" %>
     </center>
  </div>

 </div>